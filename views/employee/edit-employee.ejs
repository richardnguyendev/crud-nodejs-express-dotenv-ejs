<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Device Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Device Management System</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
            </ul>
            <form class="d-flex" method="POST" action="/employee" novalidate>
              <input class="form-control me-2" type="search" placeholder="Search" name="search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>

      
      <div class="col-12" style="padding-left:20% ;padding-right:20%">
        <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/employee">Employee</a></li>
          <li class="breadcrumb-item active" aria-current="page">Edit Employee</li>
        </ol>
      </nav>
        <% rows.forEach(item=>{ %>  
        <form class="row g-3 needs-validation" method="POST" action="/employee/edit-employee/<%= item.employeeID %>" novalidate>           
          <div class="col-12">
            <select name="departmentID" id="departmentID" class="form-control" required>
                <option selected value="<%= item.id %>"><%= item.departmentName %></option>
                <option value="1">IT</option>                                       
                <option value="2">Ke Toan</option>                                       
                <option value="3">Nhan Su</option>                                       
            </select>
        </div>           
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" value= "<%= item.employeeName %>" placeholder="employeeName" name="employeeName">
                <label for="floatingInput">EmployeeName</label>
              </div>
        </div>           
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" value= "<%= item.sex %>" placeholder="sex" name="sex">
                <label for="floatingInput">Sex</label>
              </div>
        </div>    
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" value= "<%= item.birthday %>" placeholder="birthday" name="birthday">
                <label for="floatingInput">Birthday</label>
              </div>
        </div>    
        <div class="col-6">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="floatingInput" value= "<%= item.salary %>" placeholder="salary" name="salary">
                <label for="floatingInput">Salary</label>
              </div>
        </div>
        <div class="col-12 d-grid">
            <button class="btn btn-primary" type="submit">Update</button>
        </div>         
        </form>
        <% }) %>

      </div>      
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
    crossorigin="anonymous"></script>
</body>
</html>